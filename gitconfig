[user]
  name = Chad Chabot
  email = chadchabot@gmail.com
[core]
  quotepath = false
  excludesfile = ~/.gitignore
  editor = /usr/bin/vim

[commit]
  template = ~/.gitmessage

[alias]
  co = checkout
  cb = checkout -b
  ci = commit
  st = status
  br = branch
  d  = branch -D
  p  = pull
  #TODO: this is broken. Figure out what the correct format string is.
  hist = log --pretty-format:\"%h %ad | %s%d [%an]\" --graph --date-short
  type = cat-file -t
  dump = cat-file -p
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[color "branch"]
  current = yellow reverse
  remote = green bold
  local = blue bold

[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green bold
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[push]
  default = simple
