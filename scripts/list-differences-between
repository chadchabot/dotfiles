#!/bin/bash

if [ "$#" -ne 2 ]; then
  echo "Usage: $0 /path/to/source /path/to/destination"
  exit 1
fi

source_path="$1"
dest_path="$2"

# Generate checksums for all files in source directory
find "$source_path" -type f -exec shasum {} \; | sort > source_files.txt

# Generate checksums for all files in destination directory
find "$dest_path" -type f -exec shasum {} \; | sort > dest_files.txt

# Compare the checksums to see the differences
echo "Comparing directories..."
diff source_files.txt dest_files.txt

# Clean up temporary files
rm source_files.txt dest_files.txt
